{% extends 'base.html.twig' %}

{% block title %}Estudantes{% endblock %}

{% block body %}
    <h2 class="text-center font-weight-bold pt-3"><i class="bi bi-emoji-angry-fill"></i>Blacklist of Students</h2>
    <div class="pl-5 pr-5 pt-2 table-responsive text-center">
        <table class="table table-striped table-dark">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
            </tr>
            </thead>
            {% for student in list %}
                <tr>
                    <td>{{ student.id }}</td>
                    <td>{{ student.title }}</td>
                    <td>{{ student.name }}</td>
                    <td>{{ student.email }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}